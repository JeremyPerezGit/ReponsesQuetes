});
console.log(decryptedCode.join(""));

// EX 02 - Remove the 'X' and the even numbers
// Hint: As this is a string you should find a way to convert into an array.

const hiddenCode =
  "XXXXXXXXXXXXXXXXXXXXXXXXXXXCXXXXXXXOXXXXXDXXXXXXXXXXXXXXXEXXXX XXXXXXXXXXXXXXX:";

// Your code goes here
const cryptedCode = hiddenCode.split("");
const decryptedCode2 = [];

cryptedCode.forEach(function (item) {
  if (item !== "X" && item % 2 != 0) {
    decryptedCode2.push(item);
  }
});
console.log(decryptedCode2.join(""));
